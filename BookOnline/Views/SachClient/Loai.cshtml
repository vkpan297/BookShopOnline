
@model PagedList.IPagedList<Models.Sach>

@using PagedList.Mvc;
@{
    var loai = (Models.LoaiSach)ViewBag.Loai;
    ViewBag.Title = loai.TenLoai;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


   <div class="banner">

    @section slide{

        <div class="w3l_banner_nav_left">
            <nav class="navbar nav_bottom">
                <!-- Brand and toggle get grouped for better mobile display -->
                <!-- Collect the nav links, forms, and other content for toggling -->

                @{ Html.RenderAction("LoaiSach", "SachClient");}

            </nav>
        </div>

        <div class="w3l_banner_nav_right">
            

               
            <div class="w3ls_w3l_banner_nav_right_grid">
                
                <div class="w3ls_w3l_banner_nav_right_grid1">

                    <h6 style="text-align:center">@loai.TenLoai</h6>
                    @foreach (var item in Model)
                    {
                        var link = "/chi-tiet/" + item.TenSach + "-" + item.IDSach;
                        <div class="col-md-3 w3ls_w3l_banner_left" >
                            <div class="hover14 column">
                                <div class="agile_top_brand_left_grid w3l_agile_top_brand_left_grid">
                                    <div class="agile_top_brand_left_grid_pos">
                                        <img src="~/Assets/client/images/offer.png" alt=" " class="img-responsive" />
                                    </div>
                                    <div class="agile_top_brand_left_grid1">
                                        <figure>
                                            <div class="snipcart-item block">
                                                <div class="snipcart-thumb">
                                                    <a href="@link"><img src="~/images/image/@item.Anh" alt=" " class="img-responsive" style="width:300px;height:300px;" /></a>
                                                    <p>@item.TenSach</p>
                                                    <h4>@item.Gia.000 VND</h4>
                                                </div>
                                                <div class="snipcart-details">
                                                    <form action="#">
                                                        <fieldset>
                                                            <a href="/them-gio-hang?IDSach=@item.IDSach&SoLuong=1">Thêm Vào Giỏ Hàng</a>
                                                        </fieldset>
                                                    </form>
                                                </div>
                                            </div>
                                        </figure>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div class="clearfix"></div>
                @Html.PagedListPager(Model, page => Url.Action("Loai", new { page }))

            </div>
        </div>
        <div class="clearfix"></div>
    }
       </div>
















