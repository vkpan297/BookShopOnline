@model Models.LienHe
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<!DOCTYPE html>
<html lang="en">
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <style>
        import url("https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css");

        import url('https://fonts.googleapis.com/css?family=Roboto');
        #contact {
            background-color: #f1f1f1;
            font-family: 'Roboto', sans-serif;
        }

#contact .well{
    margin-top:30px;
    border-radius:0;
}

#contact .form-control{
    border-radius: 0;
    border:2px solid #1e1e1e;
}

#contact button{
    border-radius:0;
    border:2px solid #1e1e1e;
}

#contact .row{
    margin-bottom:30px;
}


    </style>
</head>
<body class="bg-gradient-primary">
    
    <!------ Include the above in your HEAD tag ---------->
    <section id="contact">
        <div class="container">
            <div class="well well-sm">
                <h3><strong>Liên hệ với chúng tôi</strong></h3>
            </div>

            <div class="row">
                <div class="col-md-7">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d3736489.7218514383!2d90.21589792292741!3d23.857125486636733!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sbd!4v1506502314230" width="100%" height="315" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
                <div class="col-md-5">
                    
                    @using (@Html.BeginForm())
                    {
                        @Html.ValidationSummary()
                        <form>
                            <div class="form-group">

                                @Html.TextBoxFor(model => model.tennguoilh, new { @class = "form-control", name = "", value = "", placeholder = "Tên khách hàng" })
                                @Html.ValidationMessageFor(model => model.tennguoilh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.sdtnguoilh, new { @class = "form-control", name = "", value = "", placeholder = "Số điện thoại" })
                                @Html.ValidationMessageFor(model => model.sdtnguoilh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.emailnguoilh, new { @class = "form-control", name = "", value = "", placeholder = "Email" })
                                @Html.ValidationMessageFor(model => model.emailnguoilh, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.TextBoxFor(model => model.diachinguoilh, new { @class = "form-control", name = "", value = "", placeholder = "Địa chỉ" })
                                @Html.ValidationMessageFor(model => model.diachinguoilh, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">

                                @Html.TextAreaFor(model => model.noidung, new { @class = "form-control", name = "", value = "", placeholder = "Nội dung", rows = "3" })
                                @Html.ValidationMessageFor(model => model.noidung, "", new { @class = "text-danger" })
                            </div>
                            <button class="btn btn-default" type="submit" name="button">
                                 Gửi
                            </button>
                        </form>
                    }
                    </div>
            </div>
        </div>
    </section>

</body>

