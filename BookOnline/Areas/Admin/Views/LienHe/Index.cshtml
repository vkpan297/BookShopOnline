
@model PagedList.IPagedList<Models.LienHe>

@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Phản Hồi</h1>
    <p class="mb-4"></p>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"></h6>
        </div>
        @using (Html.BeginForm("Index", "LienHe", FormMethod.Get))
        {

            <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
                <div class="input-group">
                    <input type="text" class="form-control bg-light border-0 small" placeholder="Search for..." aria-label="Search" aria-describedby="basic-addon2" value="@ViewBag.SearchString" name="searchString">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search fa-sm"></i>
                        </button>
                    </div>
                </div>
            </form>
        }

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Liên hệ</th>
                            <th>Tên Người Gửi Liên Hệ</th>
                            <th>Số Điện Thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>                           
                            <th>Nội Dung</th>
                            <th>Ngày Nhận Phản Hồi</th>
                           


                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.malh</td>
                                <td>@item.tennguoilh</td>
                                <td>@item.sdtnguoilh</td>
                                <td>@item.emailnguoilh</td>
                                <td>@item.diachinguoilh</td>
                                <td>@item.noidung</td>
                                <td>@item.ngaylh</td>
                               
                                <td>


                                    <a href="/Admin/LienHe/Delete/@item.malh">Xoá</a>

                            </tr>
                        }
                    </tbody>

                </table>

                @Html.PagedListPager(Model, page => Url.Action("Index", new { page, @searchString = @ViewBag.SearchString }))
                
            </div>
        </div>
    </div>
</div>

